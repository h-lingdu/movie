/* pages/common/common.wxss */
.big_top {
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  margin-top: 40rpx;
  justify-content: space-between;
  align-items: center;
  background-color: thistle;
}

.left {
  font-size: 40rpx;
  color: tomato;
}

.big_list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.big_photo {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}

.photo {
  width: 340rpx;
  height: 340rpx;
  border-radius: 5rpx;
  background: #aaa
}

.name {
  display: block;
  font-size: 24rpx;
  line-height: 32rpx;
  width: 340rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  
}